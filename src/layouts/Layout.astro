---
import Footer from "../components/Footer.astro";
import HeaderComponent from "../components/header/HeaderComponent.astro";
import { ViewTransitions } from "astro:transitions";
import '@fontsource-variable/onest';

const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Template built with tailwindcss using Tailus blocks v2" />
        <title>{title}</title>
        <ViewTransitions fallback="none"/>
    </head>
    <body>
        <HeaderComponent/>
        <slot />
        <Footer />
    </body>

</html>
<style>
    html {
        scroll-behavior: smooth;
        color-scheme: light dark;
    }

    body {
        margin: 0;
        font-family: 'Onest Variable', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
   
</style>
