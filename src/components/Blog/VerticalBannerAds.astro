---
import { ads } from "src/consts/affiliateLinks";
import getBanner from "src/utils/getBannerAd"

interface Props{
    sponsor?: string
}

const {sponsor} = Astro.props;
const {link, text, img} = getBanner(0);

const { img: imgUse = img, 
        link: linkUse = link, 
        text: textUse = text } = ads.find(ad => ad.img === sponsor) || {};
---
<aside class="lg:flex w-full hidden justify-center mx-auto mt-12 lg:mt-0">
    <a class="md:opacity-70 hover:brightness-100 md:hover:opacity-100 transition-opacity lg:max-h-[420px] max-w-[180px] lg:min-w-[220px]" target="_blank" rel="noreferrer nofollow" href={linkUse}>
        <div class="w-full flex-col items-center justify-center relative h-full flex"> 
            <p class="absolute text-xs top-[-37px] xl:top-[-23px]">{textUse}</p>
            <img class="object-cover rounded-lg size-full" src={`/banners/vertical/${imgUse}.webp`} alt={textUse}>
        </div>    
        <button class="font-bold text-xs p-1 px-2 rounded-lg text-gray-400 w-full text-center">Ver informaci√≥n</button>
    </a>    
</aside>

