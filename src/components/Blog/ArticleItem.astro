---
interface Props {
    title: string;
    img: string;
    description: string;
    tags: string[];
    date: string;
    slug: string;
}
const { title, description, tags, img, date, slug } = Astro.props;
---

<div 
    transition:name={`${title}-blog-item`}
    class="max-w-[290px] rounded-lg h-auto bg-black hover:scale-[1.02] transition">
    <a href={`/blog/${slug}`}>
        <div class="w-full overflow-hidden">
            <img
                class="size-full object-contain rounded-lg rounded-b-none hover:rotate-2 hover:scale-110 transition-transform"
                src={img}
                alt={description}
            />
        </div>
        <div class="p-5 pt-8">
            <h3 class="text-white font-bold text-lg">
                {title}
            </h3>
            <p 
                class="text-base text-gray-600 my-2">
                {description}
            </p>
        </div>
    </a>

    <footer class="flex justify-between p-5 pt-0">
        <div class="flex items-center gap-2 m-0 p-0">
            {
                tags?.map((tag: string) => (
                    <a class="text-sm text-yellow-400 hover:opacity-65">
                        {tag}
                    </a>
                ))
            }
        </div>
        <span class="flex justify-center items-center text-xs">{date}</span>
    </footer>
</div>
