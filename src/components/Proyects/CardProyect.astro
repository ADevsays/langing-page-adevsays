---
interface Props{
    title:string, description:string, link:string
}
const {title, description, link} = Astro.props
---
<a href={link} class="block cursor-pointer card-proyect relative">
    <div class="pb-2">
        <div class="flex items-center gap-4">
            <div class="border-2 border-yellow-400 text-white size-12 flex justify-center items-center">
                <slot/>
            </div>
            <button class="border rounded-lg text-sm py-2 px-3 opacity-75"><span>Â¡Entrar ahora!</span></button>    
        </div>
        <h4 class="font-semibold mt-3">{title}</h4>
        <p class="text-gray-200 text-sm mt-3"> 
            {description}
        </p>    
    </div>
    <div class="border-decoration"></div>
</a>

<style>
    .border-decoration{
        position: absolute;
        bottom: 0;
        width: 0;
        height: 2px;
        transition: width 0.4s ease;
        background-color: rgb(250 204 21);
    }
    .card-proyect:hover .border-decoration{
        width: 100%;
    }
    .card-proyect:hover button{
        opacity: 1;
    }
</style>