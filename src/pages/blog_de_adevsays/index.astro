---
import HeroBlog from "@components/Blog/HeroBlog.astro";
import Layout from "src/layouts/Layout.astro";
---

<Layout 
    title="Blog de Adevsays, creador de contenido y programador" 
    description="Aquí encontrarás contenido atrapante y actualizado del mundo del desarrollo web, software, desarrollo y tecnología en general.">
    <div aria-hidden="true"  class="absolute inset-0 opacity-40 dark:opacity-20">
		<div class="relative h-full w-full bg-slate-950"><div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div></div>
	</div>
	<main class="w-full flex flex-wrap min-h-screen">
        <HeroBlog/>
    </main>
</Layout>