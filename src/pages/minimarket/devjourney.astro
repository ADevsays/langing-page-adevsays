---
import MiniMarketLayout from "src/layouts/MiniMarketLayout.astro";
import DevJourneyMain from "../../sections/Minimarket/DevJourneyMain.astro"
import DevJourneyContent from "@sections/Minimarket/DevJourneyContent.astro";
---

<MiniMarketLayout title="DevJourney - La mejor herramienta para programadores" description="Página de venta de la plantilla DevJourney, un sistema diseñado para mejorar la productivdad de los estudiantes de programación.">
    <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-10">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-yellow-600 to-purple-400 dark:to-indigo-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-yellow-600 to-sky-300 dark:to-indigo-600"></div>
    </div>
    <div class="w-full flex justify-center flex-col items-center">
        <DevJourneyMain/>
        <DevJourneyContent/>
    </div>
</MiniMarketLayout>